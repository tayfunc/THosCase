@using System.Linq;

@model THosCase.Business.ViewModel.CategoryViewModel


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@Model.PageTitle</h3>

<button type="button" class="btn btn-primary" id="addNewCategory">
    <i class="fas fa-plus"></i> Yeni Kategori Ekle
</button>

<table class="table">
    <thead>
        <tr>
            <th>Kategori Id</th>
            <th>Kategori Adı</th>
            <th>Üst Kategori Adı</th>
            <th>Silinmiş</th>
            <th>Oluşturma Tarihi</th>
            <th>Kaydı Oluşturan Kullanıcı</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    @(category.ParentCategoryId > 0 && Model.Categories.Any(x=> x.CategoryId == category.ParentCategoryId) ? Model.Categories.FirstOrDefault(x => x.CategoryId == category.ParentCategoryId).CategoryName : "-")
                </td>
                <td>@(category.IsDeleted ? "Evet" : "Hayır")</td>
                <td>@category.CreatedDate</td>
                <td>@category.CreatorUserName</td>
                <td>
                    <!-- Güncelle Butonu - Modal tetikleyici -->
                    <button type="button" class="btn btn-warning btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#updateModal"
                            data-category-id="@category.CategoryId"
                            data-category-name="@category.CategoryName"
                            data-parent-id="@category.ParentCategoryId"
                            data-isdeleted="@category.IsDeleted">
                        <i class="fas fa-edit"></i> Güncelle
                    </button>

                    <!-- Sil Butonu -->
                    <button type="button" class="btn btn-danger btn-sm delete-btn"
                            data-category-id="@category.CategoryId"
                            data-category-name="@category.CategoryName"
                            data-parent-id="@category.ParentCategoryId">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Güncelleme Modal -->
<div class="modal fade" id="updateModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Kategori Güncelle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateForm">
                    <input type="hidden" id="categoryId" name="CategoryId" />

                    <div class="mb-3">
                        <label for="categoryName" class="form-label">Kategori Adı</label>
                        <input type="text" class="form-control" id="categoryName" name="CategoryName" required>
                    </div>

                    <div class="mb-3">
                        <label for="parentCategoryId" class="form-label">Üst Kategori</label>
                        <select class="form-control" id="parentCategoryId" name="ParentCategoryId">
                            <option value="0">-- Üst Kategori Seçin --</option>
                            @foreach (var category in ViewBag.ParentCategories as List<THosCase.Business.CategoryModel>)
                            {
                                <option value="@category.CategoryId">@category.CategoryName</option>
                            }
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" id="saveChanges">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JS ve Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@section Scripts {
    <script>
        // Yeni kategori ekle butonu
        $('#addNewCategory').click(function () {
            // Modal içeriğini AJAX ile yükle
            $.ajax({
                url: '@Url.Action("Add", "Category")',
                type: 'GET',
                success: function (data) {
                    // Eğer modal zaten varsa kaldır
                    if ($('#addModal').length) {
                        $('#addModal').remove();
                    }

                    $('body').append(data);

                    $('#addModal').modal('show');

                    $('#addCategory').off('click').on('click', function () {
                        //$('#addForm').serialize()
                        var formData = {
                            "CategoryName": $("#addForm #addCategoryName").val(),
                            "ParentCategoryId": $("#addForm #addParentCategoryId").val(),
                            "IsDeleted": $("#addForm #categoryIsActive").prop("checked")
                        };

                        $.ajax({
                            url: '@Url.Action("Add", "Category")',
                            type: 'POST',
                            data: formData,
                            success: function (response) {
                                $('#addModal').modal('hide');
                                location.reload();
                            },
                            error: function () {
                                alert('Bir hata oluştu!');
                            }
                        });
                    });
                },
                error: function () {
                    alert('Form yüklenirken hata oluştu!');
                }
            });
        });

        // Modal kapandığında temizle
        $('body').on('hidden.bs.modal', '#addModal', function () {
            $(this).remove();
        });

        // Modal açıldığında verileri doldur
        $('#updateModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var categoryId = button.data('category-id');
            var categoryName = button.data('category-name');
            var isDeleted = button.data('isdeleted');
            var parentId = button.data('parent-id');

            var modal = $(this);
            modal.find('#categoryId').val(categoryId);
            modal.find('#categoryName').val(categoryName);
            modal.find('#parentCategoryId').val(parentId);
            modal.find('#categoryIsActive').val(isDeleted);
        });

        // Kaydet butonu click event
        $('#saveChanges').click(function () {
            var formData = $('#updateForm').serialize();

            $.ajax({
                url: '@Url.Action("Update", "Category")',
                type: 'POST',
                data: formData,
                success: function (response) {
                    $('#updateModal').modal('hide');
                    location.reload();
                },
                error: function () {
                    alert('Bir hata oluştu!');
                }
            });
        });

        // Sil butonu click event
        $('.delete-btn').click(function () {
            var categoryId = $(this).data('category-id');
            var categoryName = $(this).data('category-name');

            if (confirm(categoryName + ' kategorisini silmek istediğinize emin misiniz?')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Category")',
                    type: 'POST',
                    data: { id: categoryId },
                    success: function (response) {
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        var errorMessage = xhr.responseJSON.errors.join('\n');

                        alert('Bir hata oluştu!\n\n' + errorMessage);
                    }
                });
            }
        });
    </script>
}