@model IEnumerable<THosCase.Models.CategoryProductCountViewModel>
@{
    ViewBag.Title = "Dashboard";
    Response.ContentType = "text/html; charset=UTF-8";
    Response.Charset = "utf-8";
}

<main>
    <div class="row">
        <div class="col-md-6 mb-4">
            <h2 class="mb-4 text-primary">
                <i class="fas fa-list-alt"></i> Kategoriler ve Ürün Sayıları
            </h2>
            <div class="card shadow-sm">
                <div class="card-body p-2">
                    <table class="table table-sm table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <i class="fas fa-tag text-secondary"></i> Kategori Adı
                                </th>
                                <th class="text-center">
                                    <i class="fas fa-boxes text-secondary"></i> Ürün Sayısı
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.CategoryName</td>
                                    <td class="text-center">
                                        <span class="badge bg-info text-dark">
                                            <i class="fas fa-cube"></i> @item.ProductCount
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <h2 class="mb-4 text-primary">
                <i class="fas fa-coins"></i> Döviz Kurları (TCMB)
            </h2>
            <div id="currency-widget" class="card border-info shadow-sm">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-coins"></i> Döviz Kurları (TCMB)
                    <span id="currency-last-update" class="float-end small"></span>
                </div>
                <div class="card-body p-2">
                    <div id="currency-loading" class="text-center text-muted">Kurlar yükleniyor...</div>
                    <table id="currency-table" class="table table-sm table-bordered mb-0 d-none">
                        <thead>
                            <tr>
                                <th>Döviz</th>
                                <th>Alış</th>
                                <th>Satış</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- JS ile doldurulacak -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <script>
        function fetchCurrencyRates() {
            fetch('@Url.Action("GetCurrencies", "Home")')
                .then(response => response.json())
                .then(data => {
                    var rows = "";
                    data.forEach(function(item) {
                        rows += "<tr><td>" + item.Name + " (" + item.Code + ")</td><td>" + item.ForexBuying + "</td><td>" + item.ForexSelling + "</td></tr>";
                    });
                    document.getElementById("currency-table").querySelector("tbody").innerHTML = rows;
                    document.getElementById("currency-loading").classList.add("d-none");
                    document.getElementById("currency-table").classList.remove("d-none");
                    document.getElementById("currency-last-update").textContent = "Güncelleme: " + new Date().toLocaleTimeString();
                });
        }

        fetchCurrencyRates();
        setInterval(fetchCurrencyRates, 10000);
    </script>
}