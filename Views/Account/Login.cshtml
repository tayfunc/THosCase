@model THosCase.Business.LoginModel

@{
    ViewBag.Title = "Cafe Menü Sistemi - Giriş";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <h2>Cafe Menü Sistemi</h2>
            <p>Lütfen hesabınıza giriş yapın</p>
        </div>

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = "~/Views/Home/Index" }, FormMethod.Post, new { @class = "login-form" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Username, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Kullanıcı adınızı girin" })
                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Şifrenizi girin" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}