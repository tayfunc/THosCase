@model THosCase.Business.RequestModel.ProductRequestModel

<div class="modal fade" id="addModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Yeni Özellik Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addForm">
                    <div class="mb-3">
                        <label for="addPropertyKey" class="form-label">Tanım *</label>
                        <input type="text" class="form-control" id="addPropertyKey" name="PropertyKey" required>
                    </div>

                    <div class="mb-3">
                        <label for="addPropertyValue" class="form-label">Değer *</label>
                        <input type="text" class="form-control" id="addPropertyValue" name="PropertyValue" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-success" id="addProperty">Kaydet</button>
            </div>
        </div>
    </div>
</div>