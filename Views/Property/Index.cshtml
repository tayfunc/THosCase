@using System.Linq;

@model THosCase.Business.ViewModel.PropertyViewModel


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@Model.PageTitle</h3>

<button type="button" class="btn btn-primary" id="addNewProperty">
    <i class="fas fa-plus"></i> Yeni Özellik Ekle
</button>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tanım</th>
            <th>Değer</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var property in Model.Properties)
        {
            <tr>
                <td>@property.PropertyId</td>
                <td>@property.PropertyKey</td>
                <td>@property.PropertyValue</td>                
                <td>
                    <!-- Güncelle Butonu - Modal tetikleyici -->
                    <button type="button" class="btn btn-warning btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#updateModal"
                            data-id="@property.PropertyId"
                            data-key="@property.PropertyKey"
                            data-value="@property.PropertyValue">
                        <i class="fas fa-edit"></i> Güncelle
                    </button>

                    <!-- Sil Butonu -->
                    <button type="button" class="btn btn-danger btn-sm delete-btn"
                            data-id="@property.PropertyId"
                            data-key="@property.PropertyKey"
                            data-value="@property.PropertyValue">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Güncelleme Modal -->
<div class="modal fade" id="updateModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Özellik Güncelle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateForm">
                    <input type="hidden" id="propertyId" name="PropertyId" />

                    <div class="mb-3">
                        <label for="propertyKey" class="form-label">Tanım</label>
                        <input type="text" class="form-control" id="propertyKey" name="PropertyKey" required>
                    </div>

                    <div class="mb-3">
                        <label for="propertyValue" class="form-label">Değer</label>
                        <input type="text" class="form-control" id="propertyValue" name="PropertyValue" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" id="saveChanges">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JS ve Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@section Scripts {
    <script>
        // Yeni kategori ekle butonu
        $('#addNewProperty').click(function () {
            // Modal içeriğini AJAX ile yükle
            $.ajax({
                url: '@Url.Action("Add", "Property")',
                type: 'GET',
                success: function (data) {
                    // Eğer modal zaten varsa kaldır
                    if ($('#addModal').length) {
                        $('#addModal').remove();
                    }

                    $('body').append(data);

                    $('#addModal').modal('show');

                    $('#addProperty').off('click').on('click', function () {
                        var formData = new FormData();

                        formData.append('PropertyKey', $('#addForm #addPropertyKey').val());
                        formData.append('PropertyValue', $('#addForm #addPropertyValue').val());

                        $.ajax({
                            url: '@Url.Action("Add", "Property")',
                            type: 'POST',
                            data: formData,
                            processData: false,
                            contentType: false,
                            success: function (response) {
                                $('#addModal').modal('hide');
                                location.reload();
                            },
                            error: function (xhr, status, error) {
                                var errorMessage = xhr.responseJSON.errors.join('\n');

                                alert('Bir hata oluştu!\n\n' + errorMessage);
                            }
                        });
                    });
                },
                error: function () {
                    alert('Form yüklenirken hata oluştu!');
                }
            });
        });

        // Modal kapandığında temizle
        $('body').on('hidden.bs.modal', '#addModal', function () {
            $(this).remove();
        });

        // Modal açıldığında verileri doldur
        $('#updateModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var propertyId = button.data('id');
            var propertyKey = button.data('key');
            var propertyValue = button.data('value');

            var modal = $(this);
            modal.find('#propertyId').val(propertyId);
            modal.find('#propertyKey').val(propertyKey);
            modal.find('#propertyValue').val(propertyValue);
        });

        // Kaydet butonu click event
        $('#saveChanges').click(function () {
            var formData = new FormData();

            formData.append('PropertyId', $('#updateForm #propertyId').val());
            formData.append('PropertyKey', $('#updateForm #propertyKey').val());
            formData.append('PropertyValue', $('#updateForm #propertyValue').val());

            $.ajax({
                url: '@Url.Action("Update", "Property")',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    $('#updateModal').modal('hide');
                    location.reload();
                },
                error: function (xhr, status, error) {
                    var errorMessage = xhr.responseJSON.errors.join('\n');

                    alert('Bir hata oluştu!\n\n' + errorMessage);
                }
            });
        });

        // Sil butonu click event
        $('.delete-btn').click(function () {
            var propertyId = $(this).data('id');
            var propertyKey = $(this).data('key');
            var propertyValue = $(this).data('value');

            if (confirm(propertyKey + '-' + propertyValue + ' özelliğini silmek istediğinize emin misiniz?')) {
                $.ajax({
                    url: '@Url.Action("Delete", "Property")',
                    type: 'POST',
                    data: { id: propertyId },
                    success: function (response) {
                        location.reload();
                    },
                    error: function (xhr, status, error) {
                        var errorMessage = xhr.responseJSON.errors.join('\n');

                        alert('Bir hata oluştu!\n\n' + errorMessage);
                    }
                });
            }
        });
    </script>
}