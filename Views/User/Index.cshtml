@using System.Linq;

@model THosCase.Business.ViewModel.UserViewModel


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>@Model.PageTitle</h3>

<button type="button" class="btn btn-primary" id="addNewUser">
    <i class="fas fa-plus"></i> Yeni Kullanıcı Ekle
</button>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Kullanıcı Adı</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserId</td>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td>@user.Username</td>
                <td>
                    <!-- Güncelle Butonu - Modal tetikleyici -->
                    <button type="button" class="btn btn-warning btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#updateModal"
                            data-id="@user.UserId"
                            data-name="@user.Name"
                            data-surname="@user.Surname"
                            data-username="@user.Username">
                        <i class="fas fa-edit"></i> Güncelle
                    </button>

                    <!-- Sil Butonu -->
                    <button type="button" class="btn btn-danger btn-sm delete-btn" data-id="@user.UserId" data-username="@user.Username">
                        <i class="fas fa-trash"></i> Sil
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Güncelleme Modal -->
<div class="modal fade" id="updateModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Kullanıcı Güncelle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateForm">
                    <input type="hidden" id="userId" name="UserId" />

                    <div class="mb-3">
                        <label for="name" class="form-label">Ad</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>

                    <div class="mb-3">
                        <label for="surname" class="form-label">Soyad</label>
                        <input type="text" class="form-control" id="surname" name="surname">
                    </div>

                    <div class="mb-3">
                        <label for="username" class="form-label">Kullanıcı Adı</label>
                        <input type="text" class="form-control" id="username" name="username" required>
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Şifre</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" id="saveChanges">Kaydet</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Bootstrap JS ve Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

@section Scripts {
    <script>
        // Yeni kategori ekle butonu
        $('#addNewUser').click(function () {
            // Modal içeriğini AJAX ile yükle
            $.ajax({
                url: '@Url.Action("Add", "User")',
                type: 'GET',
                success: function (data) {
                    // Eğer modal zaten varsa kaldır
                    if ($('#addModal').length) {
                        $('#addModal').remove();
                    }

                    $('body').append(data);

                    $('#addModal').modal('show');

                    $('#addUser').off('click').on('click', function () {
                        var formData = {
                            "Name": $("#addForm #name").val(),
                            "Surname": $("#addForm #surname").val(),
                            "Username": $("#addForm #username").val(),
                            "Password": $("#addForm #password").val()
                        };

                        $.ajax({
                            url: '@Url.Action("Add", "User")',
                            type: 'POST',
                            data: formData,
                            success: function (response) {
                                $('#addModal').modal('hide');
                                location.reload();
                            },
                            error: function (xhr, status, error) {
                                var errorMessage = xhr.responseJSON.errors.join('\n');

                                alert('Bir hata oluştu!\n\n' + errorMessage);
                            }
                        });
                    });
                },
                error: function (xhr, status, error) {
                    alert('Form yüklenirken hata oluştu!');
                }
            });
        });

        // Modal kapandığında temizle
        $('body').on('hidden.bs.modal', '#addModal', function () {
            $(this).remove();
        });

        // Modal açıldığında verileri doldur
        $('#updateModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var userId = button.data('id');
            var name = button.data('name');
            var surname = button.data('surname');
            var username = button.data('username');
            var password = button.data('password');

            var modal = $(this);
            modal.find("#userId").val(userId);
            modal.find('#name').val(name);
            modal.find('#surname').val(surname);
            modal.find('#username').val(username);
            modal.find('#password').val(password);
        });

        // Kaydet butonu click event
        $('#saveChanges').click(function () {
            var formData = $('#updateForm').serialize();

            $.ajax({
                url: '@Url.Action("Update", "User")',
                type: 'POST',
                data: formData,
                success: function (response) {
                    $('#updateModal').modal('hide');
                    location.reload();
                },
                error: function (xhr, status, error) {
                    var errorMessage = xhr.responseJSON.errors.join('\n');

                    alert('Bir hata oluştu!\n\n' + errorMessage);
                }
            });
        });

        // Sil butonu click event
        $('.delete-btn').click(function () {
            var userId = $(this).data('id');
            var username = $(this).data('username');

            if (confirm(username + ' kullanıcısını silmek istediğinize emin misiniz?')) {
                $.ajax({
                    url: '@Url.Action("Delete", "User")',
                    type: 'POST',
                    data: { id: userId },
                    success: function (response) {
                        location.reload();
                    },
                    error: function () {
                        alert('Bir hata oluştu!');
                    }
                });
            }
        });
    </script>
}